/* Button used to open the contact form - fixed at the bottom of the page */
.open-button, .open-button-21 {
  background-color: #555;
  color: white;
  padding: 16px 20px;
  border: none;
  cursor: pointer;
  opacity: 1;
  position: fixed;
  bottom: 23px;
  right: 28px;
  width: 280px;
  display: none;
  z-index: 9;
}

.open-next-button {
  background-color: #555;
  color: white;
  padding: 16px 20px;
  border: none;
  cursor: pointer;
  opacity: 1;
  position: fixed;
  bottom: 103px;
  right: 28px;
  width: 280px;
  display: none;
  z-index: 9;
}

/* The popup form - hidden by default */
.form-popup, .form-popup-21 {
  display: none;
  position: fixed;
  bottom: 0;
  right: 15px;
  /*border: 3px solid #f1f1f1;*/
  z-index: 9;
  height: 500px;
  box-shadow: 1px 1px 11px 4px rgba(100, 110, 101, 1); /*125, 120, 130*/
  overflow-y: scroll;
}

.form-popup-21{display: none;}

/* Add styles to the form container */
.form-container {
  max-width: 300px;
  padding: 10px;
  background-color: black;
}
.form-container h1{font-size: 30px;color: white;}
.form-container label{color: white;}

/* Full-width input fields */
.form-container input[type=text], .form-container input[type=password], .form-container input[type=tel]{
  width: 100%;
  padding: 15px;
  margin: 5px 0 2px 0;
  border: none;
  background: #f1f1f1;
  height: 35px;
}
.form-container .pscountry, .form-container .pscountry-21, .form-container .ps-privacy
, .form-container .ps-privacy-21{
	cursor:  pointer;
  width: 100%;
  padding: 15px;
  margin: 5px 0 2px 0;
  border: none;
  background: #f1f1f1;
}
#audio-ad-image, #audio-ad-image-21{
  top: 15px;
  margin-bottom: 5px;
  width: 100%;
}
.form-container textarea {
  width: 100%;
  padding: 12px;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
  margin-top: 6px;
  margin-bottom: 16px;
  resize: vertical;	
}

/* When the inputs get focus, do something */
.form-container input[type=text]:focus, .form-container input[type=password]:focus {
  background-color: #ddd;
  outline: none;
}

/* Set a style for the submit/login button */
.form-container .btn {
  background-color: #04AA6D;
  color: white;
  padding: 16px 20px;
  border: none;
  cursor: pointer;
  width: 100%;
  opacity: 0.8;
  margin: 5px 0 2px 0;
  margin-bottom:10px;
}

/* Add a red background color to the cancel button */
.form-container .cancel, .step-back-by-1, .form-container .done{
  background-color: red;
}

.form-container .done{display: none;}

/* Add some hover effects to buttons */
.form-container .btn:hover, .open-button:hover, .open-button-21:hover, .open-next-button:hover {
  opacity: 1;
}

