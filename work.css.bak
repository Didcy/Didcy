value.custom-file-input-0, value.custom-file-input-developer, 
value.custom-file-input-developer-css, value.custom-file-input-developer-server {
  color: transparent;
}
.custom-file-input-0::-webkit-file-upload-button, 
.custom-file-input-developer::-webkit-file-upload-button, 
.custom-file-input-developer-css::-webkit-file-upload-button, 
.custom-file-input-developer-server::-webkit-file-upload-button {
  visibility: hidden;
}
.custom-file-input-0, .custom-file-input-developer, 
.custom-file-input-developer-css, .custom-file-input-developer-server{
  display: block;
  margin-left: auto;
  margin-right: auto;
 
  padding: 5px;
  font-size: 20px;
  margin-bottom: 10px;
  
  border-left: none;
  border-right: none;
  color: white;
  cursor: pointer;
  outline-color: gray;
  width: 200px;
  
}
.custom-file-input-0::before, .custom-file-input-developer::before, 
.custom-file-input-developer-css::before, 
.custom-file-input-developer-server::before{
  content: 'Select an ID Card';
  background: -webkit-linear-gradient(top, #f9f9f9, #e3e3e3);
  background: black; 
  border: 1px solid #999;
  border-radius: 3px;
  padding: 5px 8px;
  outline: none;
  white-space: nowrap;
  -webkit-user-select: none;
  /* text-shadow: 1px 1px #fff; */
  font-weight: 700;
  font-size: 20px;/*10pt*/
  cursor: pointer;
 color: white;
}
.custom-file-input-developer::before, #program-files::before{
  content: 'Select your program files';
}
.custom-file-input-developer-css::before, #css-files::before{
  content: 'Select your css files here';
}

.custom-file-input-developer-server::before, #server-files:before{
  content: 'Select your server files here';
}

.custom-file-input-0:hover::before, .custom-file-input-developer:hover::before 
,.custom-file-input-developer-server:hover::before{
  border-color: black;
}
.custom-file-input-0:active, .custom-file-input-developer:active, 
.custom-file-input-developer-css:active,
 .custom-file-input-developer-server:active {
  outline: 0;
}
.upload-3, .upload-developer-files{
	font-size: 20px;
	background: #000; /*DodgerBlue*/
  border: 1px solid #999;
  border-radius: 3px;
  padding: 5px 8px;
  outline: none;
  white-space: nowrap;
  -webkit-user-select: none;
  text-shadow: 1px 1px #fff;
  font-weight: 700;
  font-size: 20px;/*10pt*/
  color: transparent;
  width: 130px;
  cursor: pointer;
  display: block;
  margin-left: auto;
  margin-right: auto;
}
.adv-f{display: none;}

