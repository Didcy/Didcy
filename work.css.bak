.id-copy {
  color: transparent;
}
.id-copy::-webkit-file-upload-button {
  visibility: hidden;
}
.id-copy::before{
  content: 'Select an ID Card';
  /* color: black; */
  display: inline-block;
  background: -webkit-linear-gradient(top, #f9f9f9, #e3e3e3);
  background: blue; 
  border: 1px solid #999;
  border-radius: 3px;
  padding: 5px 8px;
  outline: none;
  white-space: nowrap;
  -webkit-user-select: none;
  /* text-shadow: 1px 1px #fff; */
  font-weight: 700;
  font-size: 20px;/*10pt*/
  cursor: pointer;
  margin-top: 0%;
  margin-bottom: 0%;
  margin-left: auto;
  margin-right: auto;
  
 color: white;
}
.id-copy-container{
  margin-left: auto;
  margin-right: auto;
