/* width */
::-webkit-scrollbar {
  width: 10px;
}

/* Track */
::-webkit-scrollbar-track {
  box-shadow: inset 0 0 5px grey; 
  border-radius: 10px;
}
 
/* Handle */
::-webkit-scrollbar-thumb {
  background: black; 
  border-radius: 10px;
}

/* Handle */
#column-51::-webkit-scrollbar-thumb {
  background-color: rgba(20, 20, 20, 1);	
  border-radius: 10px;
}

/* Handle on hover */
::-webkit-scrollbar-thumb:hover {
  background: #b30000; 
}

/* Handle on hover */
#column-51::-webkit-scrollbar-thumb:hover {
  background: #b30000; 
}

@media screen and (max-width: 1024){
::-webkit-scrollbar {
  width: 5px;
}	
}